@model BlogSystem.Domain.Models.Post

@{
    ViewBag.Title = "PostView";
}

<div class="row">

    <!-- Blog Post Content Column -->
    <div class="col-lg-8">

        <!-- Blog Post -->
        <!-- Title -->
        <h1>@Model.Title</h1>

        <!-- Author -->
        <p class="lead">
            by <a href="#">@Model.Author.UserName</a>
        </p>

        <hr>

        <!-- Date/Time -->
        <p><span class="glyphicon glyphicon-time"></span> @String.Format("Posted on {0:MM dd, yyyy} at {0:HH:mm}", Model.Date)</p>

        <hr>
        <p><span class="glyphicon glyphicon-star"></span> Rating: @Model.Rating</p>
        <hr>
        <!-- Post Content -->
        <p class="lead">
            @Model.Subtitle
        </p>
        <p>
            @Html.Raw(Model.Text)
        </p>

        <hr>

        <!-- Blog Comments -->
        <!-- Comments Form -->
        <div class="well">
            <h4>Leave a Comment:</h4>
            <form role="form">
                <div class="form-group">
                    <textarea class="form-control" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

        <hr>

        <!-- Posted Comments -->
        <!-- Comment -->

        @foreach (var comment in Model.Comments)
        {
            Html.DisplayFor(c => comment);
        }


    </div>



</div>
