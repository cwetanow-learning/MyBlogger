@model BlogSystem.Web.Models.ProfileViewModel

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h1>@Model.User.Name</h1>
    <p class="lead">Total posts: @Model.Posts.Count()</p>
    <p class="lead">Commented on: @Model.Comments.Count()</p>
    <p>


    </p>
</div>

<div>
    <a id="postsToggle" class="btn btn-primary">Posts</a>

    <div id="posts">
        <hr />
        @Html.Action("AllPosts", new { controller = "Post", posts = Model.Posts, count = Model.Posts.Count() })
    </div>
    <hr />
    <a id="commentsToggle" class="btn btn-primary">Comments</a>

    <div id="comments">
        <hr />
        @Html.Action("RenderComments", new { controller = "Comment", comments = Model.Comments })
    </div>
</div>


<script src="~/Scripts/toggler.js"></script>