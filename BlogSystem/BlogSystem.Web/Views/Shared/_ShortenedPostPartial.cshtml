@model BlogSystem.Domain.Models.Post

<div class="well">
    <div class="media">
        <div class="media-body">
            <h4 class="media-heading">
                @Html.ActionLink(Model.Title, "PostView", new { controller = "Post", postId = Model.PostId })
            </h4>
            <p class="text-right">By @(Model.Author == null ? "Anonymous" : Model.Author.UserName)</p>
            <p>
                @Model.Subtitle
            </p>
            <ul class="list-inline list-unstyled">
                <li><span><i class="glyphicon glyphicon-calendar"></i> @Model.Date</span></li>
                <li>|</li>
                <li> <span><i class="glyphicon glyphicon-comment"></i>@Model.Comments.Count()</span></li>
                <li>|</li>
                <li>
                    <span class="glyphicon glyphicon-star"></span> Rating: @Model.Rating
                </li>
            </ul>
        </div>
    </div>
</div>