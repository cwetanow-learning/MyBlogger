@model BlogSystem.Domain.Models.Post

<div class="well">
    <div class="media">
        <div class="media-body">
            <h4 class="media-heading">
                @Html.ActionLink(Model.Title, "PostView", new { controller = "Post", postId = Model.PostId })
            </h4>
            By  @Html.ActionLink(Model.Author.UserName,
           "Index",
           new { controller = "Profile", userId = Model.Author.Id },
           new { @class = "text-right" })
            <p>
                @Model.Subtitle
            </p>
            <ul class="list-inline list-unstyled">
                <li><span><i class="glyphicon glyphicon-calendar"></i> @Model.Date</span></li>
                <li>|</li>
                <li> <span><i class="glyphicon glyphicon-comment"></i> @Model.Comments.Where(c => !c.IsDeleted).Count()</span></li>
                <li>|</li>
                <li>
                    <span class="glyphicon glyphicon-star"></span> Rating: @Model.Rating
                </li>
            </ul>
        </div>
    </div>
</div>