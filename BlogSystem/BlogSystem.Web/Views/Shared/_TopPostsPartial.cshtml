@using PagedList;
@using PagedList.Mvc;

@model IPagedList<BlogSystem.Domain.Contracts.Entities.IPost>

@foreach (var post in Model)
{
    Html.RenderPartial("_ShortenedPostPartial", post);
}

<div class="pages" id="total">
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("List",
    new { page = page }))

</div>