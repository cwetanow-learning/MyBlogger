@using BlogSystem.Domain.Contracts.Entities
@model IEnumerable<IPost>

@{
    ViewBag.Title = "My posts";
}

    @if (Model.Count() == 0)
    {
        <h2>You don't have any posts</h2>
    }
    else
    {
        <h2>Latest posts</h2>
        @Html.Action("AllPosts", new { controller = "Post", posts = Model })
    }   

